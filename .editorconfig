# editorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.sh,*.spec,*.toml}]
indent_style = space
indent_size = 4

[{*.yaml,*.yml,*.json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = tab
trim_trailing_whitespace = false

[{*.go,.gitmodules,go.mod,go.sum,Makefile}]
indent_style = space
tab_width = 4